{
    "do_classify": false,
    "filter_empty_transcript": true,
    "classifier": {
        "model": "bookbot/distil-wav2vec2-adult-child-cls-52m",
        "max_duration_s": 3.0
    },
    "transcriber": {
        "type": "onnx_wav2vec2",
        "model": "bookbot/onnx-wav2vec2-xls-r-bookbot-id-lm",
        "return_timestamps": "word",
        "chunk_length_s": 30,
        "hotwords_key": "ground_truth"
    },
    "do_noise_classify": false,
    "noise_classifier": {
        "model": "bookbot/distil-ast-audioset",
        "minimum_empty_duration": 0.3,
        "threshold": 0.2
    },
    "segmenter": {
        "type": "silence",
        "silence_duration": 3.0,
        "minimum_chunk_duration": 1.0,
        "keep_whitespace": true
    }
}